- if Like.find_by(user_id: current_user, picture_id: picture.id)
  = link_to "/likes/#{picture.id}/destroy", method: :post, class: "like", remote: true do
    %span{class: "glyphicon glyphicon-heart like"}
- else
  = link_to "/likes/#{picture.id}/create", method: :post, class: "unlike", remote: true do
    %span{class: "glyphicon glyphicon-heart-empty unlike"}
%span{style: "font-size: 22px; line-height: 22px"}
  = picture.likes.count
