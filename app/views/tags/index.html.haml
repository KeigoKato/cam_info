= render "shared/header"

.container.top_container
  %h1
    タグ一覧
  .row
    .col-md-8.col-md-offset-2{style: "line-height: 50px"}
      - tag_cloud(@tags, %w(tag-x-small tag-small tag-medium tag-large tag-x-large)) do |tag, css_class|
        %span{class: css_class}
          = link_to tag.name, { action: :index, id: tag.name }, class: "label label-primary"

